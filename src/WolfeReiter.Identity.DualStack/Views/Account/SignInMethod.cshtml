@{
    ViewData["Title"] = "Login Method";
}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-6">Choose log in method</h1>
        </div>
    </div>
    <div class="row justify-content-center">  
        <div class="col-md-6">

            <div class="form-group">
            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary btn-block">Log in locally</a>
            </div>
            <hr />
            <div class="form-group">
                @*Microsoft.Identity.Web.UI prebuilt method for Azure login*@
                <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn" class="btn btn-primary btn-block">Log in with Azure</a>
            </div>
            @if(ViewBag.EnableSelfEnrollment != null && ViewBag.EnableSelfEnrollment)
            {
            <hr />
            <div class="form-group">
                <a asp-controller="Account" asp-action="Enroll" class="btn btn-outline-secondary btn-block">Register</a>
            </div>
            }
        </div>
    </div>