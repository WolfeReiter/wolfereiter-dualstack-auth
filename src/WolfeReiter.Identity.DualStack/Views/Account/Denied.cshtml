@{
    ViewData["Title"] = "Denied";
}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-6">Access denied</h1>
        </div>
    </div>
    <div class="row justify-content-center">  
        <div class="col-md-6">
            <div>
            <p>Your account is not authorized to perform the action you requested.</p>
            </div>
            <a href="javascript:history.go(-1)" class="btn btn-primary btn-block">Go back</a>
            <hr />
            <a asp-action="SignOut" asp-controller="Account" class="btn btn-outline-secondary btn-block">Log out</a>
        </div>
    </div>