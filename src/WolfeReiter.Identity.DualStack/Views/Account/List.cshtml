@{
    ViewData["Title"] = "Manage accounts";
}
<div class="container">
<div class="row justify-content-between align-items-center">
    <div class="col-md-6">
        <h1 class="display-6">Manage accounts</h1>
    </div>
    <div class="col-md-4">
        <a asp-action="New" target="_blank" class="btn btn-outline-secondary btn-block">Provision new account</a>
    </div>
    
</div>
<hr />
    @*datatable *@
    <!-- Table for account info -->
    <table class="table table-striped table-hover table-bordered display" id="account-datatable" 
        data="@Url.Action("Data", "AccountApi")" detail="@Url.Action("Edit", "Account")" ></table>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" /> 
}

@section Scripts {
    <script src="~/lib/datatables/js/dataTables.min.js"></script>
    <script type="module" src="~/js/account.list.js" asp-append-version="true"></script>
}