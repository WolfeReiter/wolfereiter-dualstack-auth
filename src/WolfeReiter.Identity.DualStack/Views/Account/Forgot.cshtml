@using WolfeReiter.Identity.DualStack.Models
@model ForgotViewModel

@{
    ViewData["Title"] = "Login";
}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-6">Forgot password</h1>
        </div>
    </div>
    <div class="row justify-content-center">  
        <div class="col-md-6">
            <form asp-action="Forgot" asp-controller="Account" asp-antiforgery="true">
                @if (ViewBag.Message != null) { <div class="alert alert-info">@ViewBag.Message</div> }
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Send reset email</button>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}