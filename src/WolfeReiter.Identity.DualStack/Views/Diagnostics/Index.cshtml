@{
    ViewData["Title"] = "Diagnostics: Claims";
}

<div class="text-center">
    <h1 class="display-4">Claims for @User?.Identity?.Name</h1>
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>ClaimType</th>
            <th>Value</th>
        </tr>

        @foreach (var claim in User.Claims)
        {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
        }
    </table>
</div>
